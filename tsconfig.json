{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@render/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
      "@common/*": ["src/common/*"],
      "@preload/*": ["src/preload/*"],
      "@hook/*": ["src/renderer/hooks/*"],
      "@component/*": ["src/renderer/components/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/preload"],
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/preload/preload.d.ts",
    "test/**/*.ts"
  ]
}
